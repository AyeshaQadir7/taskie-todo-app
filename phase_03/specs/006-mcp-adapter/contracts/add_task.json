{
  "tool_name": "add_task",
  "description": "Create a new task for the authenticated user. Returns the created task's ID, status, and title.",
  "input_schema": {
    "type": "object",
    "properties": {
      "user_id": {
        "type": "string",
        "description": "Unique identifier of the user creating the task"
      },
      "title": {
        "type": "string",
        "description": "Task title (required, max 255 characters)"
      },
      "description": {
        "type": "string",
        "description": "Optional task description"
      }
    },
    "required": ["user_id", "title"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "task_id": {
        "type": "integer",
        "description": "Unique identifier of the created task"
      },
      "title": {
        "type": "string",
        "description": "Task title"
      },
      "status": {
        "type": "string",
        "enum": ["pending"],
        "description": "Task status (always 'pending' for newly created tasks)"
      },
      "created_at": {
        "type": "string",
        "description": "ISO 8601 timestamp of task creation"
      }
    },
    "required": ["task_id", "title", "status", "created_at"]
  },
  "error_cases": [
    {
      "condition": "user_id is missing or empty",
      "error": "user_id is required",
      "http_equivalent": 400
    },
    {
      "condition": "title is missing or empty",
      "error": "Title is required",
      "http_equivalent": 400
    },
    {
      "condition": "title is longer than 255 characters",
      "error": "Title must be 255 characters or less",
      "http_equivalent": 400
    },
    {
      "condition": "Database connection fails",
      "error": "Database connection failed",
      "http_equivalent": 500
    }
  ],
  "examples": [
    {
      "name": "Create task with title only",
      "input": {
        "user_id": "user123",
        "title": "Buy groceries"
      },
      "output": {
        "task_id": 42,
        "title": "Buy groceries",
        "status": "pending",
        "created_at": "2026-02-01T12:34:56Z"
      }
    },
    {
      "name": "Create task with title and description",
      "input": {
        "user_id": "user123",
        "title": "Buy groceries",
        "description": "Milk, eggs, bread"
      },
      "output": {
        "task_id": 43,
        "title": "Buy groceries",
        "status": "pending",
        "created_at": "2026-02-01T12:35:00Z"
      }
    }
  ]
}

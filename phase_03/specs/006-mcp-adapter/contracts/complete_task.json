{
  "tool_name": "complete_task",
  "description": "Mark an existing task as completed. User must own the task. Operation is idempotent.",
  "input_schema": {
    "type": "object",
    "properties": {
      "user_id": {
        "type": "string",
        "description": "Unique identifier of the user completing the task"
      },
      "task_id": {
        "type": "integer",
        "description": "ID of the task to complete"
      }
    },
    "required": ["user_id", "task_id"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "description": "Task ID"
      },
      "title": {
        "type": "string",
        "description": "Task title"
      },
      "status": {
        "type": "string",
        "enum": ["completed"],
        "description": "Task status (always 'completed' after successful invocation)"
      },
      "updated_at": {
        "type": "string",
        "description": "ISO 8601 timestamp of last status update"
      }
    },
    "required": ["id", "title", "status", "updated_at"]
  },
  "error_cases": [
    {
      "condition": "user_id is missing or empty",
      "error": "user_id is required",
      "http_equivalent": 400
    },
    {
      "condition": "task_id is missing or not an integer",
      "error": "task_id must be an integer",
      "http_equivalent": 400
    },
    {
      "condition": "task_id does not exist or user does not own task",
      "error": "Task not found or access denied",
      "http_equivalent": 404
    },
    {
      "condition": "Database connection fails",
      "error": "Database connection failed",
      "http_equivalent": 500
    }
  ],
  "notes": {
    "idempotency": "Completing an already-completed task returns the task with status='completed' (no error)"
  },
  "examples": [
    {
      "name": "Complete a pending task",
      "input": {
        "user_id": "user123",
        "task_id": 1
      },
      "output": {
        "id": 1,
        "title": "Buy groceries",
        "status": "completed",
        "updated_at": "2026-02-01T14:00:00Z"
      }
    },
    {
      "name": "Complete an already-completed task (idempotent)",
      "input": {
        "user_id": "user123",
        "task_id": 1
      },
      "output": {
        "id": 1,
        "title": "Buy groceries",
        "status": "completed",
        "updated_at": "2026-02-01T14:00:00Z"
      }
    }
  ]
}

{
  "tool_name": "update_task",
  "description": "Update an existing task's title and/or description. User must own the task. Returns updated task details.",
  "input_schema": {
    "type": "object",
    "properties": {
      "user_id": {
        "type": "string",
        "description": "Unique identifier of the user updating the task"
      },
      "task_id": {
        "type": "integer",
        "description": "ID of the task to update"
      },
      "title": {
        "type": "string",
        "description": "New task title (optional, max 255 characters)"
      },
      "description": {
        "type": "string",
        "description": "New task description (optional)"
      }
    },
    "required": ["user_id", "task_id"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "description": "Task ID"
      },
      "title": {
        "type": "string",
        "description": "Updated task title"
      },
      "status": {
        "type": "string",
        "enum": ["pending", "completed"],
        "description": "Task status (unchanged by update_task)"
      },
      "updated_at": {
        "type": "string",
        "description": "ISO 8601 timestamp of last update"
      }
    },
    "required": ["id", "title", "status", "updated_at"]
  },
  "error_cases": [
    {
      "condition": "user_id is missing or empty",
      "error": "user_id is required",
      "http_equivalent": 400
    },
    {
      "condition": "task_id is missing or not an integer",
      "error": "task_id must be an integer",
      "http_equivalent": 400
    },
    {
      "condition": "title is provided and longer than 255 characters",
      "error": "Title must be 255 characters or less",
      "http_equivalent": 400
    },
    {
      "condition": "neither title nor description is provided",
      "error": "At least one of title or description must be provided",
      "http_equivalent": 400
    },
    {
      "condition": "task_id does not exist or user does not own task",
      "error": "Task not found or access denied",
      "http_equivalent": 404
    },
    {
      "condition": "Database connection fails",
      "error": "Database connection failed",
      "http_equivalent": 500
    }
  ],
  "examples": [
    {
      "name": "Update task title only",
      "input": {
        "user_id": "user123",
        "task_id": 1,
        "title": "Buy groceries and cook dinner"
      },
      "output": {
        "id": 1,
        "title": "Buy groceries and cook dinner",
        "status": "pending",
        "updated_at": "2026-02-01T13:00:00Z"
      }
    },
    {
      "name": "Update task description only",
      "input": {
        "user_id": "user123",
        "task_id": 1,
        "description": "Milk, eggs, bread, chicken"
      },
      "output": {
        "id": 1,
        "title": "Buy groceries and cook dinner",
        "status": "pending",
        "updated_at": "2026-02-01T13:05:00Z"
      }
    },
    {
      "name": "Update both title and description",
      "input": {
        "user_id": "user123",
        "task_id": 1,
        "title": "Shop and cook",
        "description": "Milk, eggs, bread, chicken breast"
      },
      "output": {
        "id": 1,
        "title": "Shop and cook",
        "status": "pending",
        "updated_at": "2026-02-01T13:10:00Z"
      }
    }
  ]
}

{
  "tool_name": "list_tasks",
  "description": "Retrieve all tasks owned by the authenticated user, optionally filtered by status.",
  "input_schema": {
    "type": "object",
    "properties": {
      "user_id": {
        "type": "string",
        "description": "Unique identifier of the user retrieving tasks"
      },
      "status": {
        "type": "string",
        "enum": ["all", "pending", "completed"],
        "description": "Filter tasks by status (optional; defaults to 'all')"
      }
    },
    "required": ["user_id"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "tasks": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "Task ID"
            },
            "title": {
              "type": "string",
              "description": "Task title"
            },
            "description": {
              "type": ["string", "null"],
              "description": "Optional task description"
            },
            "status": {
              "type": "string",
              "enum": ["pending", "completed"],
              "description": "Task status"
            },
            "created_at": {
              "type": "string",
              "description": "ISO 8601 timestamp of task creation"
            },
            "updated_at": {
              "type": "string",
              "description": "ISO 8601 timestamp of last update"
            }
          },
          "required": ["id", "title", "status", "created_at", "updated_at"]
        },
        "description": "List of tasks owned by the user"
      }
    },
    "required": ["tasks"]
  },
  "error_cases": [
    {
      "condition": "user_id is missing or empty",
      "error": "user_id is required",
      "http_equivalent": 400
    },
    {
      "condition": "status is not 'all', 'pending', 'completed', or null",
      "error": "Invalid status filter. Must be 'all', 'pending', or 'completed'",
      "http_equivalent": 400
    },
    {
      "condition": "Database connection fails",
      "error": "Database connection failed",
      "http_equivalent": 500
    }
  ],
  "examples": [
    {
      "name": "List all tasks for user",
      "input": {
        "user_id": "user123"
      },
      "output": {
        "tasks": [
          {
            "id": 1,
            "title": "Buy groceries",
            "description": "Milk, eggs, bread",
            "status": "pending",
            "created_at": "2026-02-01T10:00:00Z",
            "updated_at": "2026-02-01T10:00:00Z"
          },
          {
            "id": 2,
            "title": "Review PR",
            "description": null,
            "status": "completed",
            "created_at": "2026-02-01T09:00:00Z",
            "updated_at": "2026-02-01T11:00:00Z"
          }
        ]
      }
    },
    {
      "name": "List pending tasks only",
      "input": {
        "user_id": "user123",
        "status": "pending"
      },
      "output": {
        "tasks": [
          {
            "id": 1,
            "title": "Buy groceries",
            "description": "Milk, eggs, bread",
            "status": "pending",
            "created_at": "2026-02-01T10:00:00Z",
            "updated_at": "2026-02-01T10:00:00Z"
          }
        ]
      }
    },
    {
      "name": "List completed tasks only",
      "input": {
        "user_id": "user123",
        "status": "completed"
      },
      "output": {
        "tasks": [
          {
            "id": 2,
            "title": "Review PR",
            "description": null,
            "status": "completed",
            "created_at": "2026-02-01T09:00:00Z",
            "updated_at": "2026-02-01T11:00:00Z"
          }
        ]
      }
    },
    {
      "name": "User with no tasks",
      "input": {
        "user_id": "user456"
      },
      "output": {
        "tasks": []
      }
    }
  ]
}

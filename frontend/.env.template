# Frontend Environment Variables Template
# Copy this file to .env.local and replace with actual values

# REQUIRED: JWT Authentication Secret (minimum 32 characters)
# MUST be identical to backend BETTER_AUTH_SECRET
# Generate with: openssl rand -base64 48
BETTER_AUTH_SECRET=your_secret_key_minimum_32_characters_long_replace_me

# REQUIRED: Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# OPTIONAL: Next.js configuration
NEXT_PUBLIC_ENVIRONMENT=development

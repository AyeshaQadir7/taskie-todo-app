# Backend Environment Variables Template
# Copy this file to .env and replace with actual values

# REQUIRED: JWT Authentication Secret (minimum 32 characters)
# MUST be identical to frontend BETTER_AUTH_SECRET
# Generate with: openssl rand -base64 48
BETTER_AUTH_SECRET=your_secret_key_minimum_32_characters_long_replace_me

# REQUIRED: Database connection string (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# OPTIONAL: Server configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
DEBUG=True

# OPTIONAL: Logging
LOG_LEVEL=INFO
